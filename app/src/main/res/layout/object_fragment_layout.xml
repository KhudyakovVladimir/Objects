<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
        android:layout_height="match_parent">

    <EditText
            android:textSize="30dp"
            android:background="#B1B1B1"
            android:gravity="center"
            android:textColor="#FF0000"
            android:inputType="textPersonName"
            android:autofillHints="Object"
            android:hint="Title"
            android:layout_width="match_parent"
            android:layout_height="85dp"
            android:id="@+id/editTextTitle"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"/>
    <EditText
            android:inputType="textPersonName"
            android:autofillHints="Status"
            android:hint="Status"
            android:layout_width="330dp"
            android:layout_height="85dp"
            android:id="@+id/editTextStatus"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/editTextTitle"/>
    <EditText
            android:inputType="textPersonName"
            android:autofillHints="Duty"
            android:hint="Duty"
            android:layout_width="match_parent"
            android:layout_height="85dp"
            android:id="@+id/editTextDuty"
            app:layout_constraintTop_toBottomOf="@+id/editTextStatus"
            app:layout_constraintStart_toStartOf="parent"/>
    <EditText
            android:inputType="textPersonName"
            android:autofillHints="Type"
            android:hint="Type"
            android:layout_width="match_parent"
            android:layout_height="85dp"
            android:id="@+id/editTextType"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="4dp"
            app:layout_constraintTop_toBottomOf="@+id/editTextDuty"
            android:layout_marginTop="4dp"/>
    <EditText
            android:inputType="textPersonName"
            android:autofillHints="Coordinates"
            android:hint="Coordinates"
            android:layout_width="320dp"
            android:layout_height="85dp"
            android:id="@+id/editTextCoordinates"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="4dp"
            app:layout_constraintTop_toBottomOf="@+id/editTextType"/>
    <EditText
            android:inputType="textPersonName"
            android:autofillHints="Comment"
            android:hint="Comment"
            android:gravity="start|top"
            android:layout_width="match_parent"
            android:layout_height="300dp"
            android:id="@+id/editTextComment"
            app:layout_constraintTop_toBottomOf="@+id/editTextCoordinates"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"/>
    <Button
            android:text="Add"
            android:backgroundTint="#D6D6D6"
            android:layout_width="116dp"
            android:layout_height="59dp"
            android:id="@+id/buttonAdd"
            android:textColor="@color/black"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/editTextComment"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintEnd_toStartOf="@+id/buttonSave"/>
    <Button
            android:text="Delete"
            android:backgroundTint="#FA8383"
            android:layout_width="116dp"
            android:layout_height="59dp"
            android:id="@+id/buttonDelete"
            app:layout_constraintBottom_toBottomOf="@+id/buttonSave"
            android:textColor="@color/black"
            app:layout_constraintVertical_bias="0.32"
            app:layout_constraintTop_toTopOf="@+id/buttonSave"
            app:layout_constraintStart_toEndOf="@+id/buttonSave"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintEnd_toEndOf="parent"/>
    <Button
            android:text="Save"
            android:backgroundTint="#D6D6D6"
            android:layout_width="116dp"
            android:layout_height="59dp"
            android:id="@+id/buttonSave"
            app:layout_constraintBottom_toBottomOf="@+id/buttonAdd"
            android:textColor="@color/black"
            app:layout_constraintVertical_bias="0.36"
            app:layout_constraintTop_toTopOf="@+id/buttonAdd"
            app:layout_constraintStart_toEndOf="@+id/buttonAdd"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintEnd_toStartOf="@+id/buttonDelete"/>
    <CheckBox
            app:buttonTint="#FB0505"
            android:text=""
            android:gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/checkBox"
            app:layout_constraintStart_toEndOf="@+id/editTextStatus"
            app:layout_constraintTop_toBottomOf="@+id/editTextTitle"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="20dp"
            app:layout_constraintHorizontal_bias="0.0"/>
    <com.google.android.material.button.MaterialButton
            android:text="Map"
            android:textSize="10sp"
            app:strokeColor="#FF5C5C"
            app:strokeWidth="1dp"
            android:textColor="@color/black"
            android:layout_width="70dp"
            android:layout_height="85dp"
            android:layout_marginEnd="8dp"
            app:layout_constraintEnd_toEndOf="parent"
            android:id="@+id/buttonMap"
            app:layout_constraintStart_toEndOf="@+id/editTextCoordinates"
            app:layout_constraintHorizontal_bias="0.666"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toTopOf="@+id/editTextTitle"
            app:layout_constraintVertical_bias="0.475"/>

</androidx.constraintlayout.widget.ConstraintLayout>