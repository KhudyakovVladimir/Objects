<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
        android:layout_height="match_parent">

    <EditText
            android:textSize="30dp"
            android:background="#B1B1B1"
            android:gravity="center"
            android:textColor="#FF0000"
            android:inputType="textPersonName"
            android:autofillHints="Object"
            android:hint="Title"
            android:layout_width="match_parent"
            android:layout_height="85dp"
            android:id="@+id/editTextTitle"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"/>
    <EditText
            android:textColor="#636363"
            android:inputType="textPersonName"
            android:autofillHints="Status"
            android:hint="Status"
            android:layout_width="290dp"
            android:layout_height="85dp"
            android:id="@+id/editTextStatus"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/editTextTitle"
            android:layout_marginStart="50dp"/>
    <EditText
            android:textColor="#636363"
            android:inputType="textPersonName"
            android:autofillHints="Duty"
            android:hint="Duty"
            android:layout_width="340dp"
            android:layout_height="85dp"
            android:id="@+id/editTextDuty"
            app:layout_constraintTop_toBottomOf="@+id/editTextStatus"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="50dp"/>
    <EditText
            android:textColor="#636363"
            android:inputType="textPersonName"
            android:autofillHints="Type"
            android:hint="Type"
            android:layout_width="340dp"
            android:layout_height="85dp"
            android:id="@+id/editTextType"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="50dp"
            app:layout_constraintTop_toBottomOf="@+id/editTextDuty"
            android:layout_marginTop="4dp"/>
    <EditText
            android:textColor="#636363"
            android:inputType="textPersonName"
            android:autofillHints="Address"
            android:hint="Address"
            android:layout_width="270dp"
            android:layout_height="85dp"
            android:id="@+id/editTextAddress"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="50dp"
            app:layout_constraintTop_toBottomOf="@+id/editTextType"/>
    <EditText
            android:textColor="#636363"
            android:inputType="textPersonName"
            android:autofillHints="Longitude"
            android:hint="Longitude"
            android:layout_width="170dp"
            android:layout_height="85dp"
            android:id="@+id/editTextLongitude"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="50dp"
            app:layout_constraintTop_toBottomOf="@+id/editTextAddress" android:layout_marginTop="4dp"/>
    <EditText
            android:textColor="#636363"
            android:inputType="textPersonName"
            android:autofillHints="Latitude"
            android:hint="Latitude"
            android:layout_width="170dp"
            android:layout_height="85dp"
            android:id="@+id/editTextLatitude"
            app:layout_constraintStart_toEndOf="@+id/editTextLongitude"
            android:layout_marginStart="4dp"
            app:layout_constraintTop_toBottomOf="@+id/editTextAddress"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="4dp"
            app:layout_constraintHorizontal_bias="0.521"/>
    <EditText
            android:textColor="#636363"
            android:inputType="textPersonName"
            android:autofillHints="Comment"
            android:hint="Comment"
            android:gravity="start|top"
            android:layout_width="match_parent"
            android:layout_height="180dp"
            android:id="@+id/editTextComment"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintTop_toBottomOf="@+id/editTextLongitude"/>
    <Button
            android:text="Add"
            android:enabled="false"
            android:backgroundTint="#D6D6D6"
            android:layout_width="116dp"
            android:layout_height="59dp"
            android:id="@+id/buttonAdd"
            android:textColor="@color/black"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/editTextComment"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintEnd_toStartOf="@+id/buttonSave"/>
    <Button
            android:text="Delete"
            android:enabled="false"
            android:backgroundTint="#FA8383"
            android:layout_width="116dp"
            android:layout_height="59dp"
            android:id="@+id/buttonDelete"
            app:layout_constraintBottom_toBottomOf="@+id/buttonSave"
            android:textColor="@color/black"
            app:layout_constraintVertical_bias="0.32"
            app:layout_constraintTop_toTopOf="@+id/buttonSave"
            app:layout_constraintStart_toEndOf="@+id/buttonSave"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintEnd_toEndOf="parent"/>
    <Button
            android:text="Save"
            android:enabled="false"
            android:backgroundTint="#D6D6D6"
            android:layout_width="116dp"
            android:layout_height="59dp"
            android:id="@+id/buttonSave"
            app:layout_constraintBottom_toBottomOf="@+id/buttonAdd"
            android:textColor="@color/black"
            app:layout_constraintVertical_bias="0.36"
            app:layout_constraintTop_toTopOf="@+id/buttonAdd"
            app:layout_constraintStart_toEndOf="@+id/buttonAdd"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintEnd_toStartOf="@+id/buttonDelete"/>
    <CheckBox
            app:buttonTint="#FB0505"
            android:text=""
            android:gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/checkBox"
            app:layout_constraintStart_toEndOf="@+id/editTextStatus"
            app:layout_constraintTop_toBottomOf="@+id/editTextTitle"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="20dp"
            app:layout_constraintHorizontal_bias="0.0"/>
    <ImageView
            android:text="Map"
            android:textSize="10sp"
            app:strokeColor="#FF5C5C"
            app:strokeWidth="1dp"
            android:background="@drawable/map"
            android:textColor="@color/black"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginEnd="8dp"
            app:layout_constraintEnd_toEndOf="parent"
            android:id="@+id/buttonMap"
            app:layout_constraintStart_toEndOf="@+id/editTextAddress"
            app:layout_constraintHorizontal_bias="0.606"
            app:layout_constraintTop_toBottomOf="@+id/editTextType" android:layout_marginTop="16dp"/>
    <Button
            android:text="&#65049;"
            android:textSize="20sp"
            android:gravity="center"
            android:textColor="@color/black"
            android:backgroundTint="#B1B1B1"
            android:layout_width="33dp"
            android:layout_height="53dp"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="16dp"
            app:layout_constraintEnd_toEndOf="parent"
            android:id="@+id/buttonOptions"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintHorizontal_bias="1.0"/>
    <ImageView
            android:layout_width="40dp"
            android:layout_height="58dp"
            app:srcCompat="@drawable/status"
            android:id="@+id/imageView2"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp"
            app:layout_constraintTop_toBottomOf="@+id/editTextTitle"
            android:layout_marginTop="20dp"/>
    <ImageView
            android:layout_width="40dp"
            android:layout_height="58dp"
            app:srcCompat="@drawable/duty"
            android:id="@+id/imageView3"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp"
            app:layout_constraintTop_toBottomOf="@+id/editTextTitle"
            android:layout_marginTop="96dp"/>
    <ImageView
            android:layout_width="40dp"
            android:layout_height="58dp"
            app:srcCompat="@drawable/nearest"
            android:id="@+id/imageView4"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp"
            app:layout_constraintTop_toBottomOf="@+id/editTextTitle"
            android:layout_marginTop="180dp"/>
    <ImageView
            android:layout_width="40dp"
            android:layout_height="58dp"
            app:srcCompat="@drawable/address"
            android:id="@+id/imageView5"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp"
            app:layout_constraintTop_toBottomOf="@+id/editTextTitle"
            android:layout_marginTop="268dp"/>
    <ImageView
            android:layout_width="40dp"
            android:layout_height="58dp"
            app:srcCompat="@drawable/coordinates"
            android:id="@+id/imageView6"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp"
            app:layout_constraintTop_toBottomOf="@+id/editTextTitle"
            android:layout_marginTop="356dp"/>

</androidx.constraintlayout.widget.ConstraintLayout>